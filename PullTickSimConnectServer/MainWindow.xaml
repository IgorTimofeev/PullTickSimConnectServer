<Window
	x:Class="PullTickSimConnectServer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:PullTickSimConnectServer"
    mc:Ignorable="d"
	
	Title="Charlotte SimConnecto(R)"
	
	Width="367"
	Height="120"
	
	WindowStyle="None"
	WindowStartupLocation="CenterScreen"
	ResizeMode="NoResize"
	
	AllowsTransparency="True"
	Background="Transparent"
>
	<WindowChrome.WindowChrome>
		<WindowChrome
			CaptionHeight="0"
			CornerRadius="0"
			GlassFrameThickness="0"
			ResizeBorderThickness="3"
		/>
	</WindowChrome.WindowChrome>

	<Grid
		x:Name="RootGrid"
		Margin="20"
	>
		<Grid>
			<Rectangle
				x:Name="BackgroundRectangle"
				RadiusX="10"
				RadiusY="10"
				Margin="40,0,0,0"
				Fill="{StaticResource ThemeBg2}"
				StrokeThickness="1"
				MouseDown="OnTopPanelMouseDown"
			>
				<Rectangle.Stroke>
					<LinearGradientBrush>
						<GradientStop Color="{StaticResource ThemeAccentColor3}"/>
						<GradientStop Color="{StaticResource ThemeBgColor1}" Offset="1"/>
					</LinearGradientBrush>
				</Rectangle.Stroke>
			</Rectangle>

			<Ellipse
				x:Name="StatusEllipse"
				Width="{Binding ActualHeight, ElementName=RootGrid}"
				HorizontalAlignment="Left"
				Fill="{StaticResource ThemeBg3}"
				Stroke="{StaticResource ThemeAccent1}"
				StrokeThickness="0.5"
			>
				<Ellipse.Effect>
					<DropShadowEffect
						x:Name="StatusEffect"
						BlurRadius="30"
						Direction="270"
						ShadowDepth="0"
						Opacity="0.5"
						Color="{StaticResource ThemeAccentColor1}"	
					/>
				</Ellipse.Effect>
			</Ellipse>
			
			<Grid.Effect>
				<DropShadowEffect
					BlurRadius="20"
					Opacity="0.3"
					Direction="270"
					ShadowDepth="0"
					Color="#000"
				/>
			</Grid.Effect>
		</Grid>
		
		<Image
			x:Name="StatusImage"
			RenderOptions.BitmapScalingMode="HighQuality"
			Source="/Resources/Images/LogoOn.png"
			HorizontalAlignment="Left"
			Stretch="Uniform"
			MouseDown="OnTopPanelMouseDown"
		>
			<Image.ToolTip>
				<ToolTip
					Style="{StaticResource ToolTip}"	
				>
					<StackPanel>
						<TextBlock
							FontFamily="{StaticResource FontSevenSegment}"
							FontSize="12"
						>
							<TextBlock.Inlines>
								<Run Foreground="{StaticResource ThemeAccent1}">Socket server: </Run>
								<Run x:Name="TCPStatusRun"/>
							</TextBlock.Inlines>
						</TextBlock>
				
						<TextBlock
							Margin="0,8,0,0"
							FontFamily="{StaticResource FontSevenSegment}"
							FontSize="12"	
						>
							<TextBlock.Inlines>
								<Run Foreground="{StaticResource ThemeAccent1}">Flight simulator: </Run>
								<Run x:Name="SimStatusRun"/>
							</TextBlock.Inlines>
						</TextBlock>
						
						<TextBlock
							Margin="0,8,0,0"
							FontFamily="{StaticResource FontSevenSegment}"
							FontSize="12"	
						>
							<TextBlock.Inlines>
								<Run Foreground="{StaticResource ThemeAccent1}">Fedya: </Run>
								<Run>smol</Run>
							</TextBlock.Inlines>
						</TextBlock>
					</StackPanel>
				</ToolTip>
			</Image.ToolTip>
		</Image>

		<Grid
			Margin="80,0,12,0"
		>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			
			<Border
				Background="{StaticResource ThemeBg1}"
				BorderBrush="{StaticResource ThemeBg4}"
				BorderThickness="1,0,1,0"
				Margin="18,1,12,1"
			>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					
					<TextBlock
						Margin="0,9,0,0"
						Foreground="{StaticResource ThemeAccent1}"
						FontFamily="{StaticResource FontSevenSegment}"
						FontSize="14"
						TextAlignment="Center"
						Text="Port"
					/>
					
					<TextBox
						x:Name="PortTextBox"
						Grid.Row="1"
						Padding="10,0,10,5"
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center"
						Foreground="{StaticResource ThemeFg1}"
						
						CaretBrush="{StaticResource ThemeCaret}"
						FontFamily="{StaticResource FontSevenSegment}"
						FontSize="36"
						Text="25569"
						KeyUp="OnPortTextBoxKeyUp"
						LostFocus="OnPortTextBoxLostFocus"
					>
						<TextBox.Style>
							<Style TargetType="TextBox">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="TextBox">
											<ScrollViewer
												x:Name="PART_ContentHost"
												Margin="-2,0,0,0"
												Style="{StaticResource ScrollViewer}"
												Padding="{TemplateBinding Padding}"
			
												SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
												HorizontalScrollBarVisibility="{TemplateBinding HorizontalScrollBarVisibility}"
												VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}"
												HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
												VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
											>
												<ScrollViewer.Effect>
													<DropShadowEffect
														BlurRadius="30"
														Direction="270"
														ShadowDepth="0"
														Opacity="0.8"
														Color="{StaticResource ThemeFgColor1}"	
													/>
												</ScrollViewer.Effect>
											</ScrollViewer>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>

						</TextBox.Style>
					</TextBox>
				</Grid>
		
			</Border>
				
			<StackPanel
				Grid.Column="1"
				Orientation="Horizontal"
				VerticalAlignment="Center"
			>
				<Button
					x:Name="WindowMinimizeButton"
					Style="{StaticResource WindowActionButton}"
					Content="-"
					Click="OnWindowMinimizeButtonClick"
				/>
			
				<Button
					x:Name="WindowCloseButton"
					Style="{StaticResource WindowCloseButton}"
					Margin="10,0,0,0"
					Content="X"
					Click="OnWindowCloseButtonClick"
				/>
			</StackPanel>
		</Grid>
	</Grid>
</Window>